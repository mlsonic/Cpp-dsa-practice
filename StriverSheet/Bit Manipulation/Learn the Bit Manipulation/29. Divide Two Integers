// by bit maniplation tc =O(pow(log(n),2) sc = 0(1)
class Solution {
public:
    int divide(int dividend, int divisor) {
        if (dividend == divisor) return 1;

        bool sign = true;
        if (dividend >= 0 && divisor < 0) sign = false;
        if (dividend < 0 && divisor > 0) sign = false;

        long long n = llabs(dividend);
        long long d = llabs(divisor);
        long long ans = 0;

        while (n >= d) {
            int cnt = 0;
            while (n >= (d << (cnt + 1))) {
                cnt++;
            }
            ans += (1LL << cnt);
            n -= (d << cnt);
        }

        if (ans > INT_MAX && sign) return INT_MAX;
        if (ans > INT_MAX && !sign) return INT_MIN;

        return sign ? ans : -ans;
    }
};
