//By left shift 
class Solution {
  public:
    bool checkKthBit(int n, int k) {
        if((n & (1<<k)) != 0){
            return true;
        }
        return false;
        
    }
};

//by right shift
class Solution {
  public:
    bool checkKthBit(int n, int k) {
        if(((n>>k) & 1) != 0){
            return true;
        }
        return false;
        
    }
};
