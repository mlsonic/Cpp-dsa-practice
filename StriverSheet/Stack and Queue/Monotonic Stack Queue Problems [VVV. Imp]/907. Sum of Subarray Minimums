// brute force tc = O(n^2) sc = O(1)
class Solution {
public:
    int sumSubarrayMins(vector<int>& arr) {
        int mod = (int)1e9+7;
        long sum = 0;
        for(int i = 0 ; i < arr.size() ; i++){
            int mini = INT_MAX;
            for(int j = i ; j < arr.size() ; j++){
                mini = min(mini,arr[j]);
                sum += mini;
            }
        }
        return sum%mod;
    }
};
