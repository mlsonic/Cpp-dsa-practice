// optimal solution tc = O(2N) sc = (3N)
class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& nums1, vector<int>& nums2) {
        vector<int> ans;
        stack<int> st;
        unordered_map<int,int> mpp;
        int n = nums2.size();
        for(int i = n-1 ; i >= 0 ; i--){
            while(!st.empty() && st.top() <= nums2[i]){
                st.pop(); //remove small elements than nums2[i] int stack
            }
            if(st.empty()){
                mpp[nums2[i]] = -1; 
            }
            else mpp[nums2[i]] = st.top();
            st.push(nums2[i]); 
        }

        for(int x : nums1){
            ans.push_back(mpp[x]);
        }
        return ans;
    }
};

//Brute force tc = O(n*m) sc = O(n)
class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& nums1, vector<int>& nums2) {
        vector<int> ans;
        for(int i = 0; i < nums1.size() ; i++){
            int j;
            for(j = 0 ; j < nums2.size() ; j++){
                if(nums1[i] == nums2[j]){
                    if(j+1 == nums2.size()) ans.push_back(-1);
                    else{
                        int flag = 0;
                        for(int k = j+1 ; k < nums2.size() ; k++){
                            if(nums2[k] > nums2[j]) {
                                ans.push_back(nums2[k]);
                                flag = 1;
                                break;
                            }
                        }
                        if(flag == 0) ans.push_back(-1);
                    }
                }
            }
        }
        return ans;
    }
};
