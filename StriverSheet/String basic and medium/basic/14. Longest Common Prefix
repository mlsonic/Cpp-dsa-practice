//striver approch
class Solution {
public:
    string longestCommonPrefix(vector<string>& str) {
        if (str.empty()) return "";
        sort(str.begin(), str.end());
        string first = str[0];
        string last = str[str.size() - 1];
        string ans = "";
        int minLength = min(first.size(), last.size());
        for (int i = 0; i < minLength; i++) {
            if (first[i] != last[i]) break;
            ans += first[i];
        }
        return ans;
    }
};

//optimal approch
class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        if (strs.empty()) return "";

        sort(strs.begin(), strs.end());

        string first = strs[0];
        string last  = strs.back();

        int i = 0;
        while (i < first.size() && i < last.size() && first[i] == last[i])
            i++;

        return first.substr(0, i);
    }
};


// tc=O(m +n*m) brute force
class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        int mini=INT_MAX;
        string a;
        for(int i=0;i<strs.size();i++){
            if(strs[i].size()<mini){
                mini=i;
            }// find lowest size string to improve time complexity
        }
        for(int i=0;i<strs[mini].size();i++){
            int cnt=strs.size();
            for(int j=0;j<strs.size();j++) {
                if(strs[j][i]==strs[mini][i]) cnt--; // check if char is present in every string on same index
            }
            if (cnt==0) {
                a+=strs[mini][i];
            }
            else break; // to stop when prefix is over
        }
        return a;
    }  
};

class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        int n=strs.size();
        string a;
        int flag=1;
        for(int i=0;i<strs[0].size();i++){
            for(int j=0;j<n;j++){
              if(strs[0][i]!=strs[j][i]) flag=0;
            }
            if(flag==1){
                a+=strs[0][i];
            }
            else break;
        }
        return a;
    }
};
