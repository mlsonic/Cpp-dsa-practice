// without recusion string
class Solution {
public:
    int myAtoi(string s) {
        long long a = 0;
        int flag = 1;
        int cnt = 0;
        for(int i = 0; i < s.size(); i++){
            if(cnt == 0 && s[i] == ' ') continue;

            else if(cnt == 0 && s[i] == '-') {
                flag = -1;
                cnt = 1;
            }
            else if(cnt == 0 && s[i] == '+'){
                flag = 1;
                cnt = 1;
            }
            else if(s[i] >= '0' && s[i] <= '9'){
                a = a * 10 + (s[i] - '0');
                cnt = 1;
                if(flag == 1 && a > INT_MAX) return INT_MAX;
                if(flag == -1 && -a < INT_MIN) return INT_MIN;
            }
            else break;
        }

        return flag * a;
    }
};
