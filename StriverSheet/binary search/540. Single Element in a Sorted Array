//using binary search
class Solution {
public:
    int singleNonDuplicate(vector<int>& nums) {
        int n=nums.size();
        if(n==1) return nums[0]; // if size 1 this is answer
        if(nums[0]!=nums[1] ) return nums[0]; // no duplicate
        if(nums[n-1]!=nums[n-2] ) return nums[n-1]; //no duplicate
        int low=1,high=n-2; // skip corner so low-1 and high +1 works
        while(low<=high){
            int mid=(low+high)/2;
            if(nums[mid]!=nums[mid+1] && nums[mid]!=nums[mid-1]) return nums[mid];
            //if even odd pair eliminate the left half (under stand both below represent even odd pair)
            if (mid%2==1 && nums[mid-1]==nums[mid] || mid%2==0 && nums[mid+1]==nums[mid]){
                low=mid+1;
            }
            // if odd even eliminate right half
            else high=mid-1;
        }
        return 0;
    }
};

//using xor
class Solution {
public:
    int singleNonDuplicate(vector<int>& nums) {
        int x=nums[0];
        for(int i=1;i<nums.size();i++){
           x=x^nums[i];
        }
        return x;
    } 
};

//normally using loop
class Solution {
public:
    int singleNonDuplicate(vector<int>& nums) {
        int n=nums.size();
        if(n==1) return nums[0];
        for(int i=0;i<n;i++){
            if(i==0){
                if(nums[i]!=nums[i+1]) return nums[i];
            }
            else if(i==n-1){
                if(nums[i]!=nums[i-1]) return nums[i];
            }
            else{
                if(nums[i]!=nums[i-1] && nums[i]!=nums[i+1]) return nums[i];
            }
        }
        return 0;
    } 
};
