//brute force solution without binary search time complexity O(N)
class Solution {
public:
    vector<int> searchRange(vector<int>& nums, int target) {
        int n=nums.size();
        int low=-1,high=-1;
        for(int i=0;i<n;i++){
            if(nums[i]==target){
                if (low==-1) low=i;
                high=i;
            }
        }
        return {low,high};
    }
};

//using lower bound and upper bound  TC=2*O(log2(n)) SC=O(1)
class Solution {
public:
    vector<int> searchRange(vector<int>& nums, int target) {
        int n=nums.size();
        int lb=0,ub=0;
        lb=lower_bound(nums.begin(),nums.end(),target)-nums.begin(); // will find starting point
        ub=upper_bound(nums.begin(),nums.end(),target)-nums.begin(); // will find ending point
        if(lb==n || nums[lb] != target) return {-1,-1}; // when the target is not present this conditon comes
        return {lb,ub-1};
    }
};

//doing using Binary Search
class Solution {
public:
    vector<int> searchRange(vector<int>& nums, int target) {
        int n=nums.size();
        int low=0,high=n-1;
        int a=-1,b=-1;
        // applied binary search for find starting index
        while(low<=high){
            int mid=(low+high)/2;
            if(nums[mid]==target){
                a=mid;
                high=mid-1;
            }
            else if(nums[mid]>=target) high=mid-1;
            else low=mid+1;
        }
        low=0,high=n-1;
        //applied binary search for finding ending index
        while(low<=high){
            int mid=(low+high)/2;
            if(nums[mid]==target){
                b=mid;
                low=mid+1;
            }
            else if(nums[mid]>=target) high=mid-1;
            else low=mid+1;
        }
        return {a,b};// return start and end index as vector
        
    }
};

