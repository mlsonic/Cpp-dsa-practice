//using binary search tc=O(n Ã— log M)

class Solution {
public:
    long long func(vector<int> &arr,int hourly){
        long long totalhrs=0;
        for(int i=0;i<arr.size();i++){
            // formula below will give nearest integer for hours like 1.7=2 because koko will sometines take 3.4 hour some time 3.7  but it should be 
           totalhrs += (arr[i] + hourly - 1) / hourly;// for better precision using this fomrula instead of double
            //totalhrs+=ceil((double)arr[i]/hourly);
        }
        return totalhrs;
    }
    int minEatingSpeed(vector<int>& piles, int h) {
        int n=piles.size();
        int high=*max_element(piles.begin(),piles.end()); //find max element in array
        int low=1;
        int ans=high;
        while(low<=high){
            int mid=(low+high)/2;
            long long reqtime=func(piles,mid);
            if(reqtime<=h) {
                ans=mid;
                high=mid-1;
            }
            else low=mid+1;
     }
    return ans;
    }
};
