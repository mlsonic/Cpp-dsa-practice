//binary search approch TC=O(n*log(m))
class Solution {
public:
    bool check(vector<int>& nums, int threshold,int div){
        int sum=0;
        for(int i=0;i<nums.size();i++){
            sum+=(nums[i]+div-1)/div; //using ceil (rounding off to next integer)
        }
        if(sum<=threshold)return true;
        return false;
    }
    int smallestDivisor(vector<int>& nums, int threshold) {
        int low=1,high=*max_element(nums.begin(),nums.end());
        int ans=high;
        while(low<=high){
            int mid=(low+high)/2;
            if(check(nums,threshold,mid)){
                ans=mid;
                high=mid-1;
            }
            else low=mid+1;
        }
        return ans;
    }
};

//Brute force approch TC=O(n*m)
class Solution {
public:
    bool check(vector<int>& nums, int threshold,int div){
        int sum=0;
        for(int i=0;i<nums.size();i++){
            sum+=(nums[i]+div-1)/div; //using ceil (rounding off to next integer)
        }
        if(sum<=threshold)return true;
        return false;
    }
    int smallestDivisor(vector<int>& nums, int threshold) {
        int low=1,high=*max_element(nums.begin(),nums.end());
        for(int i=low;i<=high;i++){
           if(check(nums,threshold,i)) return i;
        }
        return -1;
    }
};
