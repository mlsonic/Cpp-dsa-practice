//BY BINARY SEARCH
class Solution {
public:
    int findMin(vector<int>& nums) {
        int n=nums.size();
        int low=0,high=n-1,mini=INT_MAX;
        while(low<=high){
            int mid=low +(high-low)/2;
            //this is optimization not compulsory but if low element is small than element at high stores that value and loop end.
            if(nums[low]<nums[high]){
                mini=min(mini,nums[low]);
                    break;
            }
            //if right hald is sorted check in left half as high is greator than mid element
            if(nums[high]>nums[mid]){
            mini=min(nums[mid],mini);
            high=mid-1;
            }
            //if left is sorted check in right right half as nums[high]is less than nums[mid]
            else{
                mini=min(nums[mid],mini);
            low=mid+1;
            }
        }
        return mini;
    }
};