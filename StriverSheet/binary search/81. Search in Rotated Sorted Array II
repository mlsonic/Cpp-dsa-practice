//by binary search tc=O(log2(n)) in worst or avg case when more duplicate TC=O(n/2)
class Solution {
public:
    bool search(vector<int>& nums, int target) {
        int n=nums.size(), a=-1;
        int low=0,high=n-1;
        while(low<=high){
            int mid=low +(high-low)/2;
            if(nums[mid]==target) return true;
            if(nums[high]==nums[mid]&& nums[mid]==nums[low]){
                low++;
                high--;
                continue;//until this condition is while we will repeat
            }
            if(nums[mid]>=nums[low]){// if left hard is  sorterd
                if(nums[low]<=target && target<nums[mid])
                    high=mid-1;
                else low=mid+1;//if not in left half
            }
            else{// if right half is sorted
                if(nums[high]>=target && target>nums[mid])
                    low=mid+1;
                else high=mid-1;//if not in right half
            }
        }
        return false;
    }
};
