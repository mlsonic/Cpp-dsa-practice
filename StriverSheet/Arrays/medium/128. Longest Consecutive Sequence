// time complexity O(3n)
class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.size() == 0) return 0;
        int longest = 1;//min longest is 1
        unordered_set<int> st; //unordered because less time complexity to find
        for(int i = 0; i < nums.size(); i++){
            st.insert(nums[i]);
        }
        for(auto it:st){
            if(st.find(it-1)==st.end()){//agar previous element set mai nhi hai;
                int cnt = 1;// toh count 1 karer
                int x=it;//int x = it karege
                //while loop banake check karerge is next element is present 
                while(st.find(x+1) != st.end()){
                    x = x + 1;//if yes check next element
                    cnt++;//and increase the cnt
                }
                longest = max(longest, cnt);
            }
        }
        return longest;
    }
};

//my brute force approch TC=O(n log n) + O(n) = O(n log n)
class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if (nums.empty()) return 0;

        sort(nums.begin(), nums.end());
        int cnt = 1, maxi = 1;

        for (int i = 1; i < nums.size(); i++) {

            if (nums[i] == nums[i - 1] + 1) {
                cnt++;// check wheather the previous element is in there or not if yes cnt is increase
            }
            else if (nums[i] != nums[i - 1]) {
                cnt = 1;// there can be duplicates so this will check previous elemengt was duplicate or not is not same so cnt will be reset to 1 mean understand we are also setting cnt zero here if sequence is not consecutive as else will work only when no dupicate and no consecutive.
            }
            maxi = max(maxi, cnt);//store max  number of cnt
        }

        return maxi;
    }
};

// TC=O(n*n)
class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.size() == 0) return 0;
        int longest = 1;//min longest is 1
        for(int i = 0; i < nums.size(); i++){
            int x = nums[i];
            int cnt = 1;
            //while look check wheather the number exist in array or not 
            while(find(nums.begin(), nums.end(), x+1) != nums.end()){
                x = x + 1;
                cnt++;
            }
            longest = max(longest, cnt);
        }
        return longest;
    }
};
