//Optimal Approch tc = O(2*m*n) sc = O(1)
class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int m = matrix.size();
        int n = matrix[0].size();
        int col0= 1;
        for(int i =  0; i < m ; i++){
            for(int j = 0 ; j < n ; j++){
                if(matrix[i][j] == 0){
                    matrix[i][0] = 0;
                    if(j != 0){
                        matrix[0][j] = 0;
                    }
                    else col0 = 0;
                } 
            }
        }
        for(int i =  1; i < m ; i++){
            for(int j = 1; j < n ; j++){
                if(matrix[i][j] != 0){
                    if(matrix[i][0] == 0 || matrix[0][j] == 0){
                        matrix[i][j] = 0;
                    } 
                }
            }
        }

        if(matrix[0][0] == 0){
            for(int j = 0 ; j < n ; j++) matrix[0][j] = 0;
        }
        if(col0 == 0){
            for(int i = 0 ; i < m ; i++) matrix[i][0] = 0;
        }


    }
};

//better approch tc = O(2*M*N) sc  = O(m+n)
class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int m = matrix.size();
        int n = matrix[0].size();
        vector<int> row(m, 0);
        vector<int> col(n, 0);
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] == 0) {
                    row[i] = 1;
                    col[j] = 1;
                }
            }
        }
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (row[i] == 1 || col[j] == 1) {
                    matrix[i][j] = 0;
                }
            }
        }
    }
};

//striver brute force tc = O(m*n*9(m+n) sc = O(1)
class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int m = matrix.size();
        int n = matrix[0].size();
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] == 0) {
                    for (int col = 0; col < n; col++) {
                        if (matrix[i][col] != 0)
                            matrix[i][col] = -1;
                    }
                    for (int row = 0; row < m; row++) {
                        if (matrix[row][j] != 0)
                            matrix[row][j] = -1;
                    }
                }
            }
        }
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (matrix[i][j] == -1)
                    matrix[i][j] = 0;
            }
        }
    }
};

class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        vector<int> row;
        vector<int> column;
        for(int i = 0 ; i < matrix.size() ; i++ ){
            for(int j = 0 ; j < matrix[0].size() ; j++){
                if(matrix[i][j] == 0) {
                    row.push_back(i);
                    column.push_back(j);
                }
            }
        }
        for(int i = 0 ; i < matrix.size() ; i++ ){
            for(int j = 0 ; j < matrix[0].size() ; j++){
                if(find(row.begin(),row.end(),i) != row.end()){
                    matrix[i][j] = 0;
                }
                else if(find(column.begin(),column.end(),j) !=  column.end()){
                    matrix[i][j] = 0;
                }
            }
        }
    }
