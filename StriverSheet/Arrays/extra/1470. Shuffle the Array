//2 pointer
class Solution {
public:
    vector<int> shuffle(vector<int>& nums, int n) {
        vector<int> ans(2 * n);
        int i = 0;
        int j = n;
        int k = 0;
        while (i < n) {
            ans[k++] = nums[i++];
            ans[k++] = nums[j++];
        }
        return ans;
    }
};

class Solution {
public:
    vector<int> shuffle(vector<int>& nums, int n) {
        vector<int> ans;
        for(int i=0;i<2*n;i++){
            if(i%2==0) ans.push_back(nums[i/2]);
            else ans.push_back(nums[n+i/2]);
        }
        return ans;
    }
};

//brute force
class Solution {
public:
    vector<int> shuffle(vector<int>& nums, int n) {
        vector<int> ans(n*2);
        int a=0,b=n;
        for(int i=0;i<n*2;i++){
            if(i%2==0) {
                ans[i]=nums[a];
                a++;
            }
            else {
                ans[i]=nums[b];
                b++;
            }
        }
        return ans; 
        }
};

//by STL
class Solution {
public:
    vector<int> shuffle(vector<int>& nums, int n) {
        vector<int> ans;
        ans.reserve(2 * n);

        for (int i = 0; i < n; i++) {
            ans.push_back(nums[i]);
            ans.push_back(nums[i + n]);
        }
        return ans;
    }
};
