#include<bits/stdc++.h>
using namespace std;

class/struct Node {//struct can be us but use class class is better for object oriented
    public:
    int data;
    Node* next;

    public://already public not need to define it 
    Node(int data1,Node* next1){
        data=data1;
        next=next1;
    public:
    Node(int data1){// this can be used when we dont want to store null ptr again and again in next
        data=data1;
        next=nullptr;
    }
};

int main(){
    vector<int>  arr ={1,6,8,9};
    Node* y = new Node(arr[0],nullptr);// if we dont use Node* here it will become object where we can just get y.data and y.next
    cout << y << "\n"; // print address of Y 
    cout << y->data << "\n";// print data 
    cout << y->next << "\n";// print next pointer 

}
//convert array to linked list
Node* convertarrtoll(vector<int> &arr){
    Node* head = new Node(arr[0]);
    Node* mover = head ;
    for(int i = 1 ; i < arr.size() ; i++){
        Node* temp = new Node(arr[i]);//store upcoming element data and null ptr
        mover->next= temp; //mover ka next become address of upcomming element to linked the elements
        mover=temp; // change mover address to adress of temp means now mover is moved to next element
    }
    return head;

}
//transversal
int main(){
    vector<int>  arr ={5,6,8,9};
    Node* head = convertarrtoll(arr); //store pointer to the head
    Node* temp= head; //temp in start have pointer of head
    while(temp){// =if pointer is not a null pointer then 
        cout<< temp->data<<" ";// print data in temp
        temp = temp->next;//move temp to next node

    }
}

//Size of linked list
int sizeofll(Node* head){
    int cnt=0;
    Node* temp= head;// we introducted pointer to temp as head because we need to move forward in linked list
    while(temp){
        temp=temp->next;
        cnt++;
    }
    return cnt;
}

int main(){
    vector<int>  arr ={5,6,8,9};
    Node* head = convertarrtoll(arr);
    cout<< sizeofll(head);
}

int checkifpresent(Node* head,int val){
    Node* temp = head ;
    while(temp){
        if (temp->data==val) return 1;
        temp=temp->next;
    }
    return 0;
}

int main(){
    vector<int>  arr ={5,6,8,9};
    Node* head = convertarrtoll(arr);
    cout<< checkifpresent(head,99);
}
