//tortoise and hare method 
//optimized solution TC=O(n/2)=O(n)
class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        ListNode* slow=head;
        ListNode* fast=head;

        while(fast && fast->next){//this while condition satify both even and odd list
            slow=slow->next;//slow moves 1 step ahead
            fast=fast->next->next;//fast move 2 step ahead
        }
        return slow;
    }
};

//Brute force TC=O(n+n/2)
class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        ListNode* temp=head;
        int cnt=0;
        while(temp){//here we are counting number of el in LL
            cnt++;
            temp=temp->next;
        }
        int a=cnt/2;//cnt after which we have to half list
        temp=head;
        while(a>0){
            temp=temp->next;
            a--;
        }
        return temp;
    }
};
