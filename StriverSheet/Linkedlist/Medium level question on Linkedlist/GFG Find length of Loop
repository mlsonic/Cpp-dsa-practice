// Brute force using hashing tc=O(n*2*log(n)) sc=O(n)
class Solution {
  public:
    int lengthOfLoop(Node *head) {
        map<Node*,int> mpp;
        Node* temp = head;
        int cnt=1;
        while(temp){
            if(mpp.find(temp) != mpp.end()){
                return cnt-mpp[temp];
            }
            mpp[temp] = cnt;
            cnt++;
            temp = temp->next;
        }   
        return 0;
    }
};
