//using tortoise and harse algo tc=O(n) sc=O(1)
int findlength(Node* slow, Node* fast){
    int cnt = 1;
    fast = fast->next;
    while(slow != fast){
    fast = fast->next;
        cnt++;
    }
    return cnt;
}

class Solution {
  public:
    int lengthOfLoop(Node *head) {
        Node* slow = head;
        Node* fast = head;
        while(fast && fast->next){
            slow = slow->next;
            fast = fast->next->next;
            if(slow == fast) return findlength(slow,fast);
        }
        return 0;
    }
};

// Brute force using hashing tc=O(n*2*log(n)) sc=O(n)
class Solution {
  public:
    int lengthOfLoop(Node *head) {
        map<Node*,int> mpp;
        Node* temp = head;
        int cnt=1;
        while(temp){
            if(mpp.find(temp) != mpp.end()){
                return cnt-mpp[temp];
            }
            mpp[temp] = cnt;
            cnt++;
            temp = temp->next;
        }   
        return 0;
    }
};

