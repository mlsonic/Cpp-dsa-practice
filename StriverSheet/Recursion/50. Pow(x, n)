//Optimal approch by recurion tc = O(log(n))
class Solution {
public:
    double power(double x, long long n) {
        if (n == 0) return 1.0;
        double half = power(x*x, n/2);
        if (n % 2 == 0) {
            return half;
        } 
        else {
            return x * half;
        }
    }

    double myPow(double x, int n) {
        if (n == 0) return 1.0;
        long long N = n;
        if (N < 0) {
            x = 1 / x;
            N = -N;
        }
        return power(x, N);
        
    }
};

//brute force recursion
class Solution {
public:
    double myPow(double x, int n) {
        if(n==0){
            return 1;
        }
        if(n>0){
            x = x * myPow(x,n-1);
        }
        else if(n<0){
            x=(1/x)*myPow(x,n+1);
        }
        return x;
    }
};

//Brute force
class Solution {
public:
    double myPow(double x, int n) {
        double a=1;
        int c=abs(n);
        for(int i=0;i<c;i++){
            a=a*x;
        }
        if(n>=0) return a;
        else return 1/a;
    }
};

